<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= pageTitle %></title>
  <link rel="icon" href="/images/shortcut44.png" />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
    crossorigin="anonymous"
  />
  <link rel="stylesheet" href="/css/main.css" />
</head>
<body>

  <div class="deposit-div rounded-2">
    <div class="container-fluid">
      <div class="app-custom-card p-3">
        <ol>
          <% users.forEach(user => { %>
            <li class="border border-secondary mb-3 p-2">
              <div class="container-fluid admin-div">
                <% if (user.isAdmin) { %>
                  <h4 class="text-success"><%= user.username %></h4>
                <% } else { %>
                  <h4><%= user.username %></h4>
                <% } %>
                <div>
                  <a class="btn btn-success" href="/admin/edit-user/<%= user._id %>">Edit</a>
                  <a class="btn btn-danger" href="/admin/delete-user/<%= user._id %>">Delete</a>
                </div>
              </div>
            </li>
          <% }) %>
        </ol>
      </div> 
    </div>
  </div>

  <script
    src="https://kit.fontawesome.com/f650632c93.js"
    crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
  <script src="/js/main.js"></script>
</body>
</html>